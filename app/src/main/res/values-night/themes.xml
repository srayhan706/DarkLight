<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Darklight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- primary brand color -->
        <item name="colorPrimary">@color/darkGrey</item>
        <item name="colorPrimaryVariant">@color/darkGrey</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    <style name="ScreenBackground"><item name="background">@color/black</item></style>
    <style name="CardBackground"><item name="background">@color/darkGrey</item></style>
    <style name="TextColor"><item name="android:textColor">@color/grey</item></style>
    <style name="ImageChange"><item name="android:src">@drawable/bookliname</item></style>

</resources>