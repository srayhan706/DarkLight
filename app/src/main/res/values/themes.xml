<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Darklight" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
       <!-- primary brand color -->
        <item name="colorPrimary">@color/lavender</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- secondary brand color -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
    </style>
    
    <style name="ScreenBackground"><item name="background">@color/yellow</item></style>
    <style name="CardBackground"><item name="background">@color/white</item></style>
    <style name="TextColor"><item name="android:textColor">@color/lavender</item></style>
    <style name="ImageChange"><item name="android:src">@drawable/bookliname</item></style>
    
    <style name="dynamictheme1" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/theme1primcolor</item>
        <item name="android:windowBackground">@drawable/fr1</item>
        <item name="colorPrimaryDark">@color/them1primcolordark</item>
        <item name="colorSecondary">@color/them1colorsecond</item>
    </style>

    <style name="dynamictheme2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/theme2primcolor</item>
        <item name="android:windowBackground">@drawable/fr2</item>
        <item name="colorPrimaryDark">@color/them2primcolordark</item>
        <item name="colorSecondary">@color/them2colorsecond</item>
    </style>

    <style name="dynamictheme3" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/theme3primcolor</item>
        <item name="android:windowBackground">@drawable/fr3</item>
        <item name="colorPrimaryDark">@color/them3primcolordark</item>
        <item name="colorSecondary">@color/them3colorsecond</item>
    </style>

</resources>